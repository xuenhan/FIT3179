{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Mean Household Income of Malaysia by State", "fontSize": 24, "fontWeight": "bold", "font":"Georgia", "anchor": "middle"},
  "width": 800,
  "height": 400,
  "padding": {"left": 50, "right": 0, "top": 20, "bottom": 20},
  "projection": {"type": "mercator"},
  "view": {"stroke": "transparent"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/xuenhan/FIT3179/main/output.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_1"}
      },
      "mark": {"type": "geoshape", "stroke": "#cccccc", "strokeWidth": 0.5, "fill": null}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/xuenhan/FIT3179/main/output.json",
        "format": {"type": "topojson", "feature": "my (1)"}
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/xuenhan/FIT3179/main/hies_state_normalized.csv"
            },
            "key": "state",
            "fields": ["income_mean", "poverty"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "#aaaaaa", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "income_mean",
          "type": "quantitative",
          "title": "Mean Household Income (RM)",
          "scale": {
            "type": "quantile",
            "range": ["#f1eef6", "#bdc9e1", "#74a9cf", "#2b8cbe", "#045a8d"]
          },
        "legend": {
          "orient": "right",
          "offset": 10,
          "titleFontSize": 12,
          "labelFontSize": 10,
          "titleFontWeight": "bold",
          "titleFont":"Sans-serif",
          "labelFont":"Sans-serif"
        }
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State"},
          {"field": "income_mean", "type": "quantitative", "title": "Mean Income (RM)", "format": ".2f"},
          {"field": "poverty", "type": "quantitative", "title": "Poverty Rate (%)", "format": ".2f"}
        ]
      }
    }
  ]
}
